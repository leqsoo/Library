@model IEnumerable<mvcbooks.Data.Author>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.Partial("_CreateButtonPartialAuthor")
</p>

<h2 class="text-danger">
    @TempData["ErrorMessage"]
</h2>
<table class="table table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="small-font">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="small-font">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "my-class btn btn-info" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { onclick = "return confirm('Do you really want to delete this?');", @class = "my-class btn btn-danger btn-responsive" })

            </td>
        </tr>
    }
</table>